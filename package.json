{
  "name": "ts-koa-passport-mongo-boilerplate",
  "description": "Auth microservice boilerplate",
  "version": "1.0.1",
  "private": true,
  "author": "Zac Anger <zac@zacanger.com> (https://zacanger.com)",
  "license": "LGPL-3.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "format": "prettier \"{src,migrations}/**/*.{ts,js}\" *.js --write",
    "migrate": "echo 'do migrations'",
    "prebuild": "npm t",
    "preversion": "npm run build",
    "start": "docker-compose up",
    "stop": "docker-compose down",
    "test": "npm run test:ts && npm run test:lint && sortpack",
    "test:lint": "eslint -c .eslintrc.json src/*.ts",
    "test:ts": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/ts-koa-passport-boilerplate.git"
  },
  "keywords": [
    "docker",
    "microservice",
    "typescript"
  ],
  "dependencies": {
    "@koa/router": "8.0.8",
    "@types/koa-passport": "4.0.2",
    "bcryptjs": "2.4.3",
    "boring-cluster": "6.0.3",
    "koa": "2.11.0",
    "koa-mid": "3.0.5",
    "koa-passport": "4.1.3",
    "koa-session": "5.13.1",
    "mongoose": "5.9.3",
    "passport-facebook": "3.0.0",
    "passport-google-oauth20": "2.0.0",
    "passport-local": "1.0.0",
    "passport-twitter": "1.0.4",
    "pgtools": "0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/koa": "2.11.2",
    "@types/koa-session": "5.10.2",
    "@types/koa__router": "8.0.2",
    "@types/node": "13.9.0",
    "@types/passport-facebook": "2.1.9",
    "@types/passport-google-oauth20": "2.0.3",
    "@types/passport-local": "1.0.33",
    "@types/passport-twitter": "1.0.34",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "1.0.3",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "sortpack": "2.1.1",
    "ts-node": "8.6.2",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
